[Unit]
Description=The Apache HTTP Server
After=network.target remote-fs.target nss-lookup.target
Documentation=https://httpd.apache.org/docs/2.4/

[Service]
Type=forking
Environment=APACHE_STARTED_BY_SYSTEMD=true
ExecStart=/bp3d/local/apache2/bin/apachectl start
ExecStop=/bp3d/local/apache2/bin/apachectl graceful-stop
ExecReload=/bp3d/local/apache2/bin/apachectl graceful
KillMode=mixed
PrivateTmp=true
Restart=on-abort
User=ag
Group=ag

[Install]
WantedBy=multi-user.target
